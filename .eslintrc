{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "import/no-extraneous-dependencies": "error"
    },
    "plugins": ["jest", "prettier"],
    "extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:prettier/recommended", "plugin:import/errors", "plugin:import/warnings"],
    "overrides": [
        {
          "files": ["**/*.ts", "**/*.tsx"],
          "parser": "@typescript-eslint/parser",
          "parserOptions": { 
            "sourceType": "module",
            "ecmaFeatures": {
              "jsx": true
            }
          },
          "plugins": ["@typescript-eslint"],
          "rules": {
            "prettier/prettier": ["error", {
              "printWidth": 80,
              "semi": true,
              "singleQuote": true,
              "trailingComma": "all",
              "parser": "typescript"
            }],
            "no-use-before-define": "off",
            "@typescript-eslint/no-use-before-define": ["error"]
          },
          "extends": [
            "plugin:@typescript-eslint/recommended"
          ]
        }
    ]
  }