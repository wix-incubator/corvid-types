{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2015",
    "importHelpers": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node", "typescript", "jest"],
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist/types",
    "declarationMap": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./src/**/*", "./scripts/**/*", "./test/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src_types",
    "types",
    "configs",
    "./test/scripts/fixtures/badSyntax.d.ts"
  ]
}
