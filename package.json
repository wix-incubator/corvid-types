{
  "name": "corvid-types",
  "version": "0.3.22",
  "description": "Type definitions for Corvid by Wix",
  "scripts": {
    "lint": "eslint ./src/** ./test/** ./scripts/**",
    "build": "npm run generate-dts && npm run patch-declarations && npm run generate-full-corvid-types && npm run generate-module-list && npm run generate-event-handlers && webpack && npm run types",
    "build:beta": "DOCS_BRANCH=metro-packages npm run build",
    "test": "npm run lint && jest",
    "types": "tsc -p ./tsconfig.json --emitDeclarationOnly",
    "test:debug": "node --inspect node_modules/.bin/p",
    "patch-declarations": "node scripts/patch-declarations.js",
    "generate-event-handlers": "ts-node scripts/generate-components-handlers/generate-event-handlers-json.ts",
    "generate-dts": "scripts/generate-types.js",
    "generate-full-corvid-types": "scripts/generate-full-corvid-types.js",
    "generate-module-list": "scripts/generate-wix-module-list.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix-incubator/corvid-types"
  },
  "engines": {
    "node": ">=12.22.0"
  },
  "license": "MIT",
  "browser": "dist/corvidTypes.esm.js",
  "main": "dist/corvidTypes.esm.js",
  "files": [
    "src",
    "dist",
    "types",
    "configs"
  ],
  "types": "./dist/types/src/index.d.ts",
  "keywords": [
    "corvid",
    "corvid-cli",
    "wix"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@types/jest": "^24.9.1",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-loader": "^8.2.3",
    "docworks-cli": "^1.11.0",
    "docworks-dts": "^1.11.0",
    "docworks-repo": "^1.9.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^25.3.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-webpack-plugin": "^3.1.1",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.5",
    "jest": "^27.4.5",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "raw-loader": "^4.0.0",
    "shelljs": "^0.8.3",
    "tmp": "^0.1.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5",
    "webpack": "~5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
