{
  "name": "corvid-types",
  "version": "0.1.89",
  "description": "Type definitions for Corvid by Wix",
  "scripts": {
    "lint": "eslint .",
    "build": "npm run generate-dts",
    "test": "jest",
    "clone-repo": "rm -rf corvid_docs && git clone git@github.com:wix-private/wix-code-docs.git corvid_docs",
    "generate-dts": "npm run clone-repo && npm run generate-dts:declaration && npm run generate-dts:selector && rm -rf corvid_docs",
    "generate-dts:declaration": "docworks dts -l corvid_docs -o declaration -d types/common --wixselector",
    "generate-dts:selector": "scripts/selector-declaration-generator.js",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix-incubator/corvid-types"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "main": "src/index.js",
  "files": [
    "types",
    "configs"
  ],
  "types": "./types/index.d.ts",
  "keywords": [
    "corvid",
    "corvid-cli",
    "wix"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/travis-cli": "^8.1.0",
    "docworks-cli": "^1.10.3",
    "docworks-dts": "^1.10.3",
    "docworks-repo": "^1.9.1",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "dependencies": {
    "@types/node": "^12.7.5"
  }
}
